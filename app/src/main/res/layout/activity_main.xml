<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="80sp"
        android:layout_marginHorizontal="20dp"
        android:gravity="right|center_vertical"
        android:layout_above="@+id/result_view"/>

    <TextView
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="0"
        android:textSize="60sp"
        android:layout_marginHorizontal="20dp"
        android:gravity="right|center_vertical"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/buttons"/>


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/b_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                android:text="C"
                />

            <Button
                android:id="@+id/b_brackets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="()"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_modulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/b_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/b_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"

                />

            <Button
                android:id="@+id/b_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/b_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"

                />

            <Button
                android:id="@+id/b_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/b_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/b_equalto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_marginHorizontal="4dp"
                android:textSize="30sp"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>